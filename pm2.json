{
  "apps": [
    {
      "name": "heartb-web-oa",
      "script": "pnpm",
      "args": "start -p 4000",
      "exec_mode": "cluster",
      "instance": 1,
      "instance_var": "INSTANCE_ID",
      "env": {
        "NODE_ENV": "production"
      },
      "merge_logs": true,
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log"
    }
  ]
}